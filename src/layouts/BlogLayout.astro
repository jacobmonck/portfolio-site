---
import "../styles/global.css";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>

  <body class="bg-zinc-950 font-sans text-zinc-100 antialiased">
    <header
      class="fixed inset-x-0 top-0 z-40 border-b border-zinc-800 bg-zinc-950/70 backdrop-blur"
    >
      <div class="mx-auto max-w-6xl px-6 py-4">
        <a
          href="/"
          class="text-sm text-zinc-400 transition hover:text-indigo-400"
        >
          ‚Üê Back to portfolio
        </a>
      </div>
    </header>

    <main class="page-fade-in mx-auto max-w-3xl px-6 pt-36 pb-24">
      <article
        class="prose prose-invert prose-zinc prose-lg prose-headings:tracking-tight prose-headings:text-zinc-100 prose-p:text-zinc-300 prose-a:text-indigo-400 prose-a:no-underline hover:prose-a:underline prose-code:text-indigo-300 prose-code:bg-zinc-900 prose-code:px-1 prose-code:rounded prose-pre:bg-zinc-900 prose-pre:border prose-pre:border-zinc-800"
      >
        <slot />
      </article>
    </main>
  </body>
</html>
